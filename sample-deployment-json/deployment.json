{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "nginx-deployment-new",
    "labels": { "app": "nginx-new" }
  },
  "spec": {
    "replicas": 3,
    "selector": { "matchLabels": { "app": "nginx-new" } },
    "template": {
      "metadata": { "labels": { "app": "nginx-new" } },
      "spec": {
        "containers": [
          {
            "name": "nginx",
            "image": "nginx:1.18",
            "ports": [{ "containerPort": 80 }]
          }
        ]
      }
    }
  }
}
